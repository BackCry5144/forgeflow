# ==============================================
# ForgeFlow - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env  (Linux/Mac)
#   copy .env.example .env  (Windows)

# ==============================================
# PostgreSQL Database Configuration
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=forgeflow
DB_USER=forgeflow
DB_PASSWORD=forgeflow123

# Full Database URL (Docker 내부에서는 호스트명이 'postgres'로 자동 변경)
DATABASE_URL=postgresql://forgeflow:forgeflow123@localhost:5432/forgeflow

# Timezone Settings
TZ=Asia/Seoul
PGTZ=Asia/Seoul

# ==============================================
# OpenAI Configuration
# ==============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# ==============================================
# FastAPI Configuration
# ==============================================
# CORS 허용 오리진 (개발/배포)
CORS_ORIGINS=http://localhost:5173,http://localhost:8000

# API 서버 설정
API_HOST=0.0.0.0
API_PORT=8000

# ==============================================
# Application Settings
# ==============================================
APP_NAME=ForgeFlow
APP_VERSION=2.0.0
DEBUG=false

# ==============================================
# Important Notes
# ==============================================
# 1. OPENAI_API_KEY는 반드시 실제 키로 변경해야 합니다
# 2. 프로덕션 환경에서는 DEBUG=false로 설정하세요
# 3. Docker 사용 시 DB_HOST는 자동으로 'postgres'로 변경됩니다
